{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "attach",
        "name": "Node: Nodemon",
        "processId": "${command:PickProcess}",
        "restart": true,
        "protocol": "inspector"
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Jest Tests",
        "program": "${workspaceRoot}\\api\\node_modules\\jest\\bin\\jest.js",
        "args": [
            "-i"
        ],
        "preLaunchTask": "build",
        "internalConsoleOptions": "openOnSessionStart",
        "outFiles": [
            "${workspaceRoot}/api/dist/**/*"
        ],
        "envFile": "${workspaceRoot}/api/.env"
    }
    ]
}