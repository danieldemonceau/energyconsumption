{
  "name": "energy-consumption-api",
  "version": "1.0.0",
  "description": "Energy Consumption API",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "dev:debug": "nodemon --inspect src/index.ts",
    "start": "node --inspect=5858 -r ts-node/register ./src/index.ts",
    "start:dev": "node build",
    "start:watch": "nodemon ./src/index.ts",
    "build": "babel src -d build --extensions .ts,.tsx --config-file ./.babelrc.json",
    "build:start:dev": "babel src -d build --extensions .ts,.tsx --config-file ./.babelrc.json && nodemon ./src/index.ts",
    "build:start:prod": "babel src -d build --extensions .ts,.tsx --config-file ./.babelrc.json && node ./src/index.ts",
    "lint": "eslint",
    "tslint-check": "tslint-config-prettier-check"
  },
  "author": "Daniel Demonceau",
  "license": "MIT",
  "dependencies": {
    "@types/express": "^4.17.9",
    "@types/validator": "^13.1.0",
    "app-root-path": "^3.0.0",
    "babel-node": "0.0.1-security",
    "custom-env": "^2.0.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "fast-csv": "^4.3.5",
    "multer": "^1.4.2",
    "nodemon": "^2.0.6",
    "pg": "^8.4.2",
    "qs": "^6.9.4",
    "validator": "^13.1.17",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@babel/register": "^7.12.1",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.3",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-0": "^6.24.1",
    "chalk": "^4.1.0",
    "current-git-branch": "^1.1.0",
    "eslint": "^7.12.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.2",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.0.5",
    "typescript-eslint": "0.0.1-alpha.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.ts": "eslint --cache --fix",
    "**/*": "prettier --write --ignore-unknown"
  }
}
